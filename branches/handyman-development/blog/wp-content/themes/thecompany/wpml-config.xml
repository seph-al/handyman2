<wpml-config>
    <custom-fields>
        <custom-field action="ignore">sectiontype</custom-field>
		<custom-field action="ignore">sectionbgcolor</custom-field>
		<custom-field action="ignore">sectiontextcolor</custom-field>
		<custom-field action="ignore">sectionfullwidth</custom-field>
		<custom-field action="ignore">sectionmargintop</custom-field>
		<custom-field action="ignore">sectionmarginbottom</custom-field>
		<custom-field action="ignore">sectioncolumns</custom-field>
		<custom-field action="ignore">sectionportfolioupsidedown</custom-field>
		<custom-field action="ignore">sectionportfoliobg</custom-field>
		<custom-field action="ignore">sectiontitlecolor</custom-field>
		<custom-field action="ignore">portfoliofilterbgcolor</custom-field>
		<custom-field action="ignore">portfoliofiltertextcolor</custom-field>
		<custom-field action="ignore">portfoliofilter</custom-field>
		<custom-field action="ignore">portfoliocats</custom-field>
		<custom-field action="ignore">portfolioitems</custom-field>
		<custom-field action="ignore">sectionsidebar</custom-field>
		<custom-field action="ignore">boxedpage</custom-field>
		<custom-field action="ignore">pagelayout</custom-field>
		<custom-field action="ignore">sidebar</custom-field>
		<custom-field action="ignore">pagetop</custom-field>
		<custom-field action="ignore">pagetitle</custom-field>
		<custom-field action="ignore">sections</custom-field>
		<custom-field action="ignore">blogcolumns</custom-field>
		<custom-field action="ignore">blogmaxposts</custom-field>
		<custom-field action="ignore">blogexcerptlength</custom-field>
		<custom-field action="ignore">blogtilecolor</custom-field>
		<custom-field action="ignore">blogtitlecolor</custom-field>
		<custom-field action="ignore">blogcats</custom-field>
    </custom-fields>
    <custom-types>
        <custom-type translate="1">section</custom-type>
        <custom-type translate="1">portfolio</custom-type>
    </custom-types>    
    <taxonomies>
        <taxonomy translate="1">portfoliocat</taxonomy>
    </taxonomies>    
    <admin-texts>
        <key name="thecompany">
            <key name="cp_footer_text" />
			<key name="cp_top_text" />
			<key name="cp_error_title" />
			<key name="cp_error_content" />
        </key>
    </admin-texts>    
    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>    
        <key name="icl_language_switcher_sidebar">0</key>  
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">0</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">1</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">0</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>    
    </language-switcher-settings>    
</wpml-config>